            id="categoriesLabel"
            text="Categorias"
            font="font:MediumBoldSystemFont"
            color="#F9F9F9"
            horizAlign="center"
            width="185"
            translation="[0,110]"
        />
        <Label
            id="subcategoriesLabel"
            text="Canais"
            font="font:MediumBoldSystemFont"
            color="#F9F9F9"
            horizAlign="center"
            width="302"
            translation="[260,110]"
