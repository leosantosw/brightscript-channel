<?xml version="1.0" encoding="utf-8"?>
<component name="HomeScreen" extends="Group">
  <interface>
    <field id="categorySelected" type="string" alwaysNotify="true" />
  </interface>
  <script type="text/brightscript" uri="HomeScreen.brs" />
  <children>
    <LayoutGroup 
        id="mainLayout"
        horizAlignment="center" 
        vertAlignment="center" 
        translation="[960,540]"
        layoutDirection="horiz"
        itemSpacings="[40]"
    >
        <!-- Channels -->
        <Group 
            id="channelsButton"
            focusable="true"
        >
            <Poster 
                id="channelsBorder"
                uri="pkg:/images/rounded-$$RES$$.9.png"
                width="500"
                height="510"
                blendColor="#0072D2"
                opacity="0"
            />
            <Rectangle 
                translation="[5,5]"
            >
                <Poster 
                    uri="pkg:/images/rounded-$$RES$$.9.png" 
                    width="490" 
                    height="500"
                    blendColor="#1A1D29" 
                />
                <Poster
                    uri="pkg:/images/channels.png"
                    width="170"
                    height="170"
                    translation="[160,140]"
                    blendColor="#F9F9F9"
                />
                <Label 
                    text="Channels" 
                    color="#F9F9F9" 
                    height="200" 
                    width="490"
                    translation="[0,280]"
                    horizAlign="center" 
                    vertAlign="center"
                    font="font:LargeBoldSystemFont" 
                />
            </Rectangle>
        </Group>

        <!-- Grid -->
        <LayoutGroup 
            id="gridLayout"
            layoutDirection="vert"
            itemSpacings="[20]"
        >
            <LayoutGroup 
                layoutDirection="horiz"
                itemSpacings="[30]"
            >
                <!-- Movies -->
                <Group 
                    id="moviesButton"
                    focusable="true"
                >
                    <Poster 
                        id="moviesBorder"
                        uri="pkg:/images/rounded-$$RES$$.9.png"
                        width="250"
                        height="255"
                        blendColor="#0072D2"
                        opacity="0"
                    />
                    <Rectangle
                        translation="[5,5]"
                    >
                        <Poster 
                            uri="pkg:/images/rounded-$$RES$$.9.png" 
                            width="240" 
                            height="245"
                            blendColor="#1A1D29" 
                        />
                        <Poster
                            uri="pkg:/images/movies.png"
                            width="90"
                            height="90"
                            translation="[75,50]"
                            blendColor="#F9F9F9"
                        />
                        <Label 
                            text="Movies" 
                            color="#F9F9F9" 
                            height="90" 
                            width="240"
                            translation="[0,150]"
                            horizAlign="center" 
                            vertAlign="center"
                            font="font:MediumSystemFont" 
                        />
                    </Rectangle>
                </Group>

                <!-- Series -->
                <Group 
                    id="seriesButton"
                    focusable="true"
                >
                    <Poster 
                        id="seriesBorder"
                        uri="pkg:/images/rounded-$$RES$$.9.png"
                        width="250"
                        height="255"
                        blendColor="#0072D2"
                        opacity="0"
                    />
                    <Rectangle
                        translation="[5,5]"
                    >
                        <Poster 
                            uri="pkg:/images/rounded-$$RES$$.9.png" 
                            width="240" 
                            height="245"
                            blendColor="#1A1D29" 
                        />
                        <Poster
                            uri="pkg:/images/series.png"
                            width="90"
                            height="90"
                            translation="[75,50]"
                            blendColor="#F9F9F9"
                        />
                        <Label 
                            text="Series" 
                            color="#F9F9F9" 
                            height="90" 
                            width="240"
                            translation="[0,150]"
                            horizAlign="center" 
                            vertAlign="center"
                            font="font:MediumSystemFont" 
                        />
                    </Rectangle>
                </Group>
            </LayoutGroup>

            <LayoutGroup 
                layoutDirection="horiz"
                itemSpacings="[30]"
            >
                <Group 
                    id="playlistButton"
                    focusable="true"
                >
                    <Poster 
                        id="playlistBorder"
                        uri="pkg:/images/rounded-$$RES$$.9.png"
                        width="250"
                        height="255"
                        blendColor="#0072D2"
                        opacity="0"
                    />
                    <Rectangle
                        translation="[5,5]"
                    >
                        <Poster 
                            uri="pkg:/images/rounded-$$RES$$.9.png" 
                            width="240" 
                            height="245"
                            blendColor="#1A1D29" 
                        />
                        <Poster
                            uri="pkg:/images/playlists.png"
                            width="90"
                            height="90"
                            translation="[75,50]"
                            blendColor="#F9F9F9"
                        />
                        <Label 
                            text="Playlist" 
                            color="#F9F9F9" 
                            height="90" 
                            width="240"
                            translation="[0,150]"
                            horizAlign="center" 
                            vertAlign="center"
                            font="font:MediumSystemFont" 
                        />
                    </Rectangle>
                </Group>

                <!-- Settings -->
                <Group 
                    id="settingsButton"
                    focusable="true"
                >
                    <Poster 
                        id="settingsBorder"
                        uri="pkg:/images/rounded-$$RES$$.9.png"
                        width="250"
                        height="255"
                        blendColor="#0072D2"
                        opacity="0"
                    />
                    <Rectangle
                        translation="[5,5]"
                    >
                        <Poster 
                            uri="pkg:/images/rounded-$$RES$$.9.png" 
                            width="240" 
                            height="245"
                            blendColor="#1A1D29" 
                        />
                        <Poster
                            uri="pkg:/images/settings.png"
                            width="90"
                            height="90"
                            translation="[75,50]"
                            blendColor="#F9F9F9"
                        />
                        <Label 
                            text="Settings" 
                            color="#F9F9F9" 
                            height="90" 
                            width="240"
                            translation="[0,150]"
                            horizAlign="center" 
                            vertAlign="center"
                            font="font:MediumSystemFont" 
                        />
                    </Rectangle>
                </Group>
            </LayoutGroup>
        </LayoutGroup>
    </LayoutGroup>
  </children>
</component>