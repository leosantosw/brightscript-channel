<?xml version="1.0" encoding="utf-8"?>
<component name="HomeScreen" extends="Group">
  <interface>
    <field id="categorySelected" type="string" alwaysNotify="true" />
  </interface>
  <script type="text/brightscript" uri="HomeScreen.brs" />
  <children>
    <LayoutGroup 
        id="mainLayout"
        horizAlignment="center" 
        vertAlignment="center" 
        translation="[640,350]"
        layoutDirection="horiz"
        itemSpacings="[30]"
    >
        <Group 
            id="channelsButton"
            focusable="true"
            translation="[0,0]"
        >
            <Poster 
                id="channelsBorder"
                uri="pkg:/images/rounded-$$RES$$.9.png"
                width="300"
                height="300"
                blendColor="#0072D2"
                opacity="0"
            />
            <Rectangle 
                translation="[5,5]"
            >
                <Poster 
                    uri="pkg:/images/rounded-$$RES$$.9.png" 
                    width="290" 
                    height="290"
                    blendColor="#1A1D29" 
                />
                <Poster
                    uri="pkg:/images/channels.png"
                    width="80"
                    height="80"
                    translation="[105,70]"
                    blendColor="#F9F9F9"
                />
                <Label 
                    text="Canais" 
                    color="#F9F9F9" 
                    height="60" 
                    width="290"
                    translation="[0,170]"
                    horizAlign="center" 
                    vertAlign="top"
                    font="font:LargeBoldSystemFont" 
                />
            </Rectangle>
        </Group>

        <!-- Grid -->
        <LayoutGroup 
            id="gridLayout"
            layoutDirection="vert"
            itemSpacings="[10]"
        >
            <LayoutGroup 
                layoutDirection="horiz"
                itemSpacings="[20]"
            >
                <!-- Movies -->
                <Group 
                    id="moviesButton"
                    focusable="true"
                >
                    <Poster 
                        id="moviesBorder"
                        uri="pkg:/images/rounded-$$RES$$.9.png"
                        width="200"
                        height="204"
                        blendColor="#0072D2"
                        opacity="0"
                    />
                    <Rectangle
                        translation="[4,4]" 
                    >
                        <Poster 
                            uri="pkg:/images/rounded-$$RES$$.9.png" 
                            width="192" 
                            height="196" 
                            blendColor="#1A1D29" 
                        />
                        <Poster
                            uri="pkg:/images/movies.png"
                            width="72" 
                            height="72" 
                            translation="[60,40]"
                            blendColor="#F9F9F9"
                        />
                        <Label 
                            text="Filmes" 
                            color="#F9F9F9" 
                            height="72" 
                            width="192" 
                            translation="[0,120]" 
                            horizAlign="center" 
                            vertAlign="center"
                            font="font:MediumSystemFont" 
                        />
                    </Rectangle>
                </Group>

                <!-- Series -->
                <Group 
                    id="seriesButton"
                    focusable="true"
                >
                    <Poster 
                        id="seriesBorder"
                        uri="pkg:/images/rounded-$$RES$$.9.png"
                        width="200"
                        height="204"
                        blendColor="#0072D2"
                        opacity="0"
                    />
                    <Rectangle
                        translation="[4,4]"
                    >
                        <Poster 
                            uri="pkg:/images/rounded-$$RES$$.9.png" 
                            width="192" 
                            height="196"
                            blendColor="#1A1D29" 
                        />
                        <Poster
                            uri="pkg:/images/series.png"
                            width="72"
                            height="72"
                            translation="[60,40]"
                            blendColor="#F9F9F9"
                        />
                        <Label 
                            text="SÃ©ries" 
                            color="#F9F9F9" 
                            height="72" 
                            width="192"
                            translation="[0,120]"
                            horizAlign="center" 
                            vertAlign="center"
                            font="font:MediumSystemFont" 
                        />
                    </Rectangle>
                </Group>
            </LayoutGroup>

            <LayoutGroup 
                layoutDirection="horiz"
                itemSpacings="[20]"
            >
                <Group 
                    id="playlistButton"
                    focusable="true"
                >
                    <Poster 
                        id="playlistBorder"
                        uri="pkg:/images/rounded-$$RES$$.9.png"
                        width="200"
                        height="204"
                        blendColor="#0072D2"
                        opacity="0"
                    />
                    <Rectangle
                        translation="[4,4]"
                    >
                        <Poster 
                            uri="pkg:/images/rounded-$$RES$$.9.png" 
                            width="192" 
                            height="196"
                            blendColor="#1A1D29" 
                        />
                        <Poster
                            uri="pkg:/images/playlists.png"
                            width="72"
                            height="72"
                            translation="[60,40]"
                            blendColor="#F9F9F9"
                        />
                        <Label 
                            text="Listas" 
                            color="#F9F9F9" 
                            height="72" 
                            width="192"
                            translation="[0,120]"
                            horizAlign="center" 
                            vertAlign="center"
                            font="font:MediumSystemFont" 
                        />
                    </Rectangle>
                </Group>

                <!-- Settings -->
                <Group 
                    id="settingsButton"
                    focusable="true"
                >
                    <Poster 
                        id="settingsBorder"
                        uri="pkg:/images/rounded-$$RES$$.9.png"
                        width="200"
                        height="204"
                        blendColor="#0072D2"
                        opacity="0"
                    />
                    <Rectangle
                        translation="[4,4]"
                    >
                        <Poster 
                            uri="pkg:/images/rounded-$$RES$$.9.png" 
                            width="192" 
                            height="196"
                            blendColor="#1A1D29" 
                        />
                        <Poster
                            uri="pkg:/images/settings.png"
                            width="72"
                            height="72"
                            translation="[60,40]"
                            blendColor="#F9F9F9"
                        />
                        <Label 
                            text="Ajustes" 
                            color="#F9F9F9" 
                            height="72" 
                            width="192"
                            translation="[0,120]"
                            horizAlign="center" 
                            vertAlign="center"
                            font="font:MediumSystemFont" 
                        />
                    </Rectangle>
                </Group>
            </LayoutGroup>
        </LayoutGroup>
    </LayoutGroup>
  </children>
</component>