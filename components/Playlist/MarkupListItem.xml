<?xml version="1.0" encoding="utf-8"?>
<component name="MarkupListItem" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="showContent" />
        <field id="focusPercent" type="float" onChange="onFocusPercentChange" />
    </interface>
    <script type="text/brightscript" uri="pkg:/components/Playlist/MarkupListItem.brs" />
    <children>
        <Group>
            <Rectangle>
                <Poster 
                    uri="pkg:/images/rounded-$$RES$$.9.png" 
                    width="620" 
                    height="80"
                    id="background"
                    blendColor="#1A1D29"
                />
                <Poster 
                    uri="pkg:/images/rounded-$$RES$$.9.png" 
                    width="620" 
                    height="80"
                    id="focusBorder"
                    blendColor="#0072D2"
                    opacity="0"
                />
                <Label 
                    id="title" 
                    color="#F9F9F9" 
                    height="80" 
                    width="700"
                    translation="[20,0]"
                    vertAlign="center"
                    font="font:MediumSystemFont"
                />
            </Rectangle>
        </Group>

        <Group
            id="trashButton"
            translation="[640,5]"
            focusable="true"
        >
            <Poster 
                id="trashIcon"
                uri="pkg:/images/rounded-$$RES$$.9.png" 
                width="70" 
                height="70"
                blendColor="#1A1D29"
            />
            <Poster
                uri="pkg:/images/trash.png"
                width="50"
                height="50"
                translation="[10,10]"
                blendColor="#F9F9F9"
            />
        </Group>
    </children>
</component> 