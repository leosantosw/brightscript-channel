<component name="Item" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="showContent" />
        <field id="focusPercent" type="float" onChange="showfocus" />
    </interface>
    <script type="text/brightscript" uri="pkg:/components/Playlist/MarkupListItem.brs" />

    <children>
        <Poster 
            uri="pkg:/images/rounded-$$RES$$.9.png" 
            width="644"  
            height="84" 
            id="item-border"
            blendColor="#0072D2"
            visible="false" 
            translation="[0,0]"
        />
        
        <Poster 
            uri="pkg:/images/rounded-$$RES$$.9.png" 
            width="638" 
            height="78"
            id="background"
            blendColor="#1A1D29"
            translation="[3,3]" 
        />

        <Poster 
            id="focusBg"
            uri="pkg:/images/rounded-$$RES$$.9.png"
            width="638" 
            height="78"
            visible="false"
            blendColor="#2b2f40"
            translation="[3,3]"
        />
        
        <Label 
            id="playlistTitle" 
            height="78" 
            width="500"
            translation="[22,3]"
            vertAlign="center"
            color="#c8cfe3"
        />

        <Poster
            uri="pkg:/images/arrow-right.png"
            width="40" 
            height="40"
            translation="[586,22]" 
        />
    </children>
</component>